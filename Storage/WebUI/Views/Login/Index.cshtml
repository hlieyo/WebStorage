
@{
    ViewBag.Title = "登陆";
}

<div class="well invoice-container">
    <div class="login-container animated fadeInDown ">
        <div class="loginbox bg-white">
            <div class="loginbox-title"></div>
            <div class="loginbox-textbox">
                <input type="text" class="form-control" placeholder="用户名" id="txtUserName" />
            </div>
            <div class="loginbox-textbox">
                <input type="password" class="form-control" placeholder="密   码" id="txtPassWord" />
            </div>
            <div class="loginbox-textbox">

                <div class="row">
                    <div class="col-lg-7 col-sm-7 col-xs-7 padding-right-10">
                        <input type="text" class="form-control" placeholder="验证码" id="txtValidateCode" />
                    </div>
                    <div class="col-lg-5 col-sm-5 col-xs-5 no-padding-left">
                        <img alt="" id="imgCode" width="100" height="30" onclick="GetLoginCode()" src="@Url.Action("GetValidateCode", "Login",new { id = 1 })" />
                    </div>
                </div>

            </div>
            <div class="loginbox-submit">
                <input type="button" class="btn btn-primary btn-block" value="登  录" onclick="UserLogin()">
            </div>
        </div>
        <div class="logobox">
        </div>
    </div>
</div>

<script type="text/javascript">
    function GetLoginCode(op) {
        $("#imgCode").attr("src", $("#imgCode").attr("src") + 1);
    }

    function UserLogin() {
        var userName = $("#txtUserName").val();
        var passWord = $("#txtPassWord").val();
        var validateCode = $("#txtValidateCode").val();

        if (userName == null || userName == "") {
            swal("", "用户名不能为空", "error");
            return;
        }
        if (passWord == null || passWord == "") {
            swal("", "密码不能为空", "error");
            return;
        }
        if (validateCode == null || validateCode == "") {
            swal("", "验证码不能为空", "error");
            return;
        }
        $.post('@Url.Action("Userlogin", "Login")', "userName=" + userName + "&passWord=" + passWord + "&validateCode=" + validateCode, function (data,textStatus, jqXHR) {
            if (data == "success") {
                window.location.href ='@Url.Action("Main", "AdminMain")';
            }
            else {
                swal("", data, "error");
            }
        });
    }
</script>


